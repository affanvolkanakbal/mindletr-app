        }
      }
    },
    "koz_arif_monthly_scores": {
      "$monthId": {
        ".read": true,
        ".indexOn": ["score", "time"],
        "$uid": {
          ".write": "$uid === auth.uid",
          ".validate": "newData.hasChildren(['username', 'score', 'time']) && newData.child('score').isNumber()"
        }
      }
    }
  }
}